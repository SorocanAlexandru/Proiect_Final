<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_Final.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="main.png"
                SemanticProperties.Description="Bine ati venit! 2"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Daca vrei sa mananci bine, noi te ajutam!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Aplicatia pentru rezervari la restaurante"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Rezervati loc intr un restaurant 2"
                FontSize="18"
                HorizontalOptions="Center" />

            <!--<Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />-->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
